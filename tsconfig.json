{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "paths": {
      "@/*": [
        "./*"
      ]
    },    
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "strict": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "importHelpers": false,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,    
    "sourceMap": false,
    "skipLibCheck": true,
    "noImplicitAny": true,
    "declaration": false,
    "moduleResolution": "node",
  },
  "exclude": ["node_modules/*"],
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ]
}